<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= csrf_meta_tags %>
	<%= render 'partials/header' %>
	
</head>
<body onload="setTimeout(function() { window.scrollTo(0, 1) }, 100);">
	
	<% flash.each do |key, value| %>
		<div class="flash <%= key %>"><%= value %></div>
	<% end %>

	<%= yield %>
	
	<%= debug(params) if Rails.env.development? %>

</body>
</html>
